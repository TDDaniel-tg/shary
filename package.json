{
  "name": "prazdnik-store",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "build:static": "NEXT_CONFIG_FILE=next.config.static.mjs next build",
    "build:static:win": "set NEXT_CONFIG_FILE=next.config.static.mjs && next build",
    "copy:index": "node scripts/copy-index.js",
    "prepare:static": "node scripts/prepare-static.js prepare",
    "restore:api": "node scripts/prepare-static.js restore",
    "build:root": "npm run prepare:static && npm run build:static:win && npm run copy:index && npm run restore:api",
    "build:ipmanager": "npm run clean && npm run prepare:static && npm run build:static:win && npm run copy:index",
    "build:index": "npm run build && npm run copy:index",
    "export": "next export",
    "start": "next start",
    "serve:static": "npx serve out",
    "deploy:static": "npm run build:static:win && npx serve out",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "analyze": "cross-env ANALYZE=true next build",
    "preview": "next build && next start",
    "clean": "rimraf .next out dist index.html",
    "server:dev": "nodemon server/index.js",
    "server:start": "node server/index.js"
  },
  "dependencies": {
    "@next/bundle-analyzer": "^15.3.2",
    "@supabase/supabase-js": "^2.39.3",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/pg": "^8.15.2",
    "axios": "^1.9.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^16.5.0",
    "firebase": "^11.8.1",
    "framer-motion": "^11.15.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.511.0",
    "next": "^15.3.2",
    "pg": "^8.16.0",
    "react": "^18.3.1",
    "react-confetti": "^6.4.0",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.54.0",
    "sharp": "^0.33.5",
    "swiper": "^11.0.5",
    "use-sound": "^5.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.12.5",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.3.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "postcss": "^8.5.1",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2"
  },
  "resolutions": {
    "sharp": "^0.33.5"
  },
  "overrides": {
    "sharp": "^0.33.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
